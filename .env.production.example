# Production environment for Vercel
# Replace the placeholder values before deploying.

# Database (PostgreSQL/Supabase recommended)
DATABASE_PROVIDER=postgresql
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME?pgbouncer=true"

# Application URLs
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_DEFAULT_LOCALE=nl
NEXT_PUBLIC_SUPPORTED_LOCALES=nl,en

# Clerk authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""
CLERK_WEBHOOK_SECRET=""

# Stripe (enable when subscriptions go live)
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Optional: Auth.js fallback if you introduce it later
NEXTAUTH_SECRET=""
NEXTAUTH_URL="https://your-domain.vercel.app"
